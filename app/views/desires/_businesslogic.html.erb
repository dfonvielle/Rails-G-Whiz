<p>
  <b>Business Logic:</b>
  <%= link_to "create new", new_desire_path(:desire_type => "Business Logic", :project_id => @project.id) %>
 
  <% if @desires.business_logic.blank? %>
    <blockquote><%= "Optional but helpful." %></blockquote>
    
  <% else %>
  
    <% @desires.business_logic.each do |desire| %>
      <ul>
        <li>
          <%= desire.description %>
          <%= check_box_tag desire.done %>
          <%= link_to "Edit", edit_desire_path(desire.id) %>
          <%= link_to "Delete", desire, :confirm => "You sure about this?", :method => :delete %>
        </li>
      </ul>
    <% end %>
  
  <% end %>

</p>