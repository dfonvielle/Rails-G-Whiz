<h1>Listing desires</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Desire Type</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @desires.each do |desire| %>
  <tr>
    <td><%= desire.description %></td>
    <td><%= desire.desire_type %></td>
    <td><%= desire.project.name %></td>
    <td><%= link_to 'Show', desire %></td>
    <td><%= link_to 'Edit', edit_desire_path(desire) %></td>
    <td><%= link_to 'Destroy', desire, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

