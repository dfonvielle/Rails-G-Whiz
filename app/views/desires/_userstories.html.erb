<p>

  <% if @desires.user_stories.blank? %>
  
    <h2>User Stories</h2>

    <p><%= link_to "create new", new_desire_path(:desire_type => "User Stories", :project_id => @project.id) %></p>
  
    <blockquote><%= "No user stories! Create some to give your rails app a clear sense of direction and help you plan it." %></blockquote>
    
  <% else %>
  

  <h2>User Stories</h2>

  <p><%= link_to "create new", new_desire_path(:desire_type => "User Stories", :project_id => @project.id) %></p>

  <table>
    <tr>
      <th></th>
      <th>As a user I want to...</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @desires.user_stories.each do |desire| %>
    <tr>
      <td><%= check_box_tag desire.done %></td>
      <td><%= desire.description %></td>
      <td><%= link_to "Edit", edit_desire_path(desire.id) %></td>
      <td><%= link_to "Delete", desire, :confirm => "You sure about this?", :method => :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />


  
  <% end %>
  
</p>