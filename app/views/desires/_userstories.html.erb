<p>
  <b>User Stories:</b>
  <%= link_to "create new", new_desire_path(:desire_type => "User Stories", :project_id => @project.id) %>
  
  <% if @desires.user_stories.blank? %>
    <blockquote><%= "No user stories! Create some to give your rails app a clear sense of direction and help you plan it." %></blockquote>
    
  <% else %>
  
    <% @desires.user_stories.each do |desire| %>
      <ul>
        <li>
          <%= desire.description %>
          <%= check_box_tag desire.done %>
          <%= link_to "Edit", edit_desire_path(desire.id) %>
          <%= link_to "Delete", desire, :confirm => "You sure about this?", :method => :delete %>
        </li>
      </ul>
    <% end %>
  
  <% end %>
  
</p>