<h1>Your Rails Projects</h1>

<table>
  <tr>
    <th>Project Name</th>
    <th>Minimum Viable Product (MVP)</th>
    <th>Github</th>
    <th>Heroku</th>
    <th>Mockup</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= link_to project.name, project %></td>
    <td><%= project.mvp %></td>
      
      <% if project.github.blank? %>
          <td><%= "no link" %></td>
      <% else %>
          <td><%= link_to "linked", project.github, :target => "_blank" %></td>
      <% end %>
      
      <% if project.heroku.blank? %>
          <td><%= "no link" %></td>
      <% else %>
          <td><%= link_to "linked", project.heroku, :target => "_blank" %></td>
      <% end %>
      
      <% if project.mockup.blank? %>
          <td><%= "no link" %></td>
      <% else %>
          <td><%= link_to "linked", project.mockup, :target => "_blank" %></td>
      <% end %>
      
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

